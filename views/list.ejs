<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>


  <div class="box">
    <%# variable to show after input %>
    <% for(var i=0; i<newListItems.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p> <%= newListItems[i] %>
      <p>
    </div>
    <% } %>


    <%# form makes a post request to the home route "/" %>
    <form class="item" action="/" method="post">
      <%# post the value of the text input with name of "newItem" %>
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value = <%= listTitle %>>+</button>
    </form>
  </div>
<%- include("footer") -%>
